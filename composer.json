{
  "name": "diffrentdigital/remove-html-comments",
  "description": "A Statamic addon to remove HTML comments from responses.",
  "license": "MIT",
  "version": "1.0.1",
  "autoload": {
    "psr-4": {
      "Diffrentdigital\\RemoveHtmlComments\\": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  },
  "require": {
    "statamic/cms": "^5.0"
  },
  "extra": {
    "statamic": {
      "name": "Remove HTML Comments",
      "description": "Removes HTML comments from responses."
    },
    "laravel": {
      "providers": [
        "Diffrentdigital\\RemoveHtmlComments\\ServiceProvider"
      ]
    }
  }
}
